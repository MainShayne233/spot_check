%tr.spot_row
  %td= activity.title
  %td
    - activity.spotchecks.each do |spotcheck|
      %li= link_to spotcheck.title, spotcheck
  %td= assignees_list(activity)

  %td= activity.total_hours_worked
  %td= activity.hours_left
  %td.delete_column= link_to '', activity, {method: :delete,
                                                  data: activity_delete_confirm,
                                                  class: 'btn btn-danger glyphicon glyphicon-trash delete_spot'}
