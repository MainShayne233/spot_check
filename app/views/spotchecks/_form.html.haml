#new_spotcheck_modal.modal.fade{role: 'dialog'}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{'data-dismiss' => 'modal', type: 'button'} &times;
        %h4.modal-title New Spotcheck
      .modal-body
        #errors
        = simple_form_for @spotcheck, remote: true do |f|
          = f.input :title
          .modal-footer
        %button.btn.btn-primary#spotcheck_save Save
        -#=f.submit class: 'btn btn-primary', id: 'spotcheck_save'
        %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'} Close